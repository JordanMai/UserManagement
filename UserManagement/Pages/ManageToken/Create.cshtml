@page
@model UserManagement.Pages.ManageToken.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ServiceToken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceToken.URL" class="control-label"></label>
                <input asp-for="ServiceToken.URL" class="form-control" />
                <span asp-validation-for="ServiceToken.URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToken.UserID" class="control-label"></label>
                <input asp-for="ServiceToken.UserID" class="form-control" />
                <span asp-validation-for="ServiceToken.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToken.Action" class="control-label"></label>
                <input asp-for="ServiceToken.Action" class="form-control" />
                <span asp-validation-for="ServiceToken.Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceToken.Expiration" class="control-label"></label>
                <input asp-for="ServiceToken.Expiration" class="form-control" />
                <span asp-validation-for="ServiceToken.Expiration" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ServiceToken.Resolved" /> @Html.DisplayNameFor(model => model.ServiceToken.Resolved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
